<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383939"
    tools:context="com.harsha.calling.activities.RewardingAdsActivity">

    <TextView
        android:id="@+id/coins"
        android:layout_width="244dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Coins = 200"
        android:textAllCaps="false"
        android:textColor="#CCCBCA"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <ImageView
        android:id="@+id/video1Icon"
        android:layout_width="103dp"
        android:layout_height="87dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569"
        app:srcCompat="@drawable/ic_coin" />

    <Button
        android:id="@+id/videoB"
        android:layout_width="301dp"
        android:layout_height="70dp"
        android:text="Watch An Ad"
        android:textAllCaps="false"
        android:textColor="#F1F2F3"
        android:textSize="16sp"
        app:backgroundTint="#515151"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coins"
        app:layout_constraintVertical_bias="0.668" />

    <TextView
        android:id="@+id/dfcgh"
        android:layout_width="282dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="One Ad View = 5 Coins"
        android:textColor="#EFF3F3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coins"
        app:layout_constraintVertical_bias="0.197" />

</androidx.constraintlayout.widget.ConstraintLayout>